@model IEnumerable<Biblioteka.Czytelnik>

@{
    ViewBag.Title = "Index";
}

<h2>Czytelnicy</h2>

<p>
    @Html.ActionLink("Dodaj nowego czytelnika (LINQ)", "Create")
</p>
<p>
    @Html.ActionLink("Dodaj nowego czytelnika (procedura)", "CreateUsingProcedure")
</p>
<p>
    @Html.ActionLink("Lista Wypożyczeń", "../Wypozyczenies")
</p>
<p>
    @Html.ActionLink("Najlepsi czytelnicy", "NajlepsiCzytelnicy")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Imie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nazwisko)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Wersja)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Imie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwisko)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wersja)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.IdCzytelnik }) |
                @Html.ActionLink("Szczegóły", "Details", new { id = item.IdCzytelnik }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.IdCzytelnik }) |
                @Html.ActionLink("Wypożyczenia", "Wypozyczenies", new { id = item.IdCzytelnik })
            </td>
        </tr>
    }

</table>
