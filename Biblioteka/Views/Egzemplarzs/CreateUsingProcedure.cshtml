@model Biblioteka.Egzemplarz

@{
    ViewBag.Title = "Create";
}

<h2>Dodaj nowy egzemplarz</h2>


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Egzemplarz</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.IdEgzemplarz, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p style="font-size: 14px; padding-left: 15px; padding-right: 15px; padding-top: 7px;">@ViewBag.IdEgzemplarz</p>
                @Html.EditorFor(model => model.IdEgzemplarz, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.IdEgzemplarz, @style = "display: none" } })
                @Html.ValidationMessageFor(model => model.IdEgzemplarz, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.IdKsiazka, "IdKsiazka", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IdKsiazka", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdKsiazka, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Dodaj" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Powrót do listy", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
