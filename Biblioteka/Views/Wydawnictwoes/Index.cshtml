@model IEnumerable<Biblioteka.Wydawnictwo>

@{
    ViewBag.Title = "Index";
}

<h2>Wydawnictwa</h2>

<p>
    @Html.ActionLink("Dodaj nowe wydawnictwo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwa)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.IdWydawnictwo }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.IdWydawnictwo }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.IdWydawnictwo })
        </td>
    </tr>
}

</table>
