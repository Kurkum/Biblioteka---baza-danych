@model Biblioteka.Wypozyczenie

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@if (ViewBag.Exception != null) {
    <h3 style="color:red">Wystąpił błąd!</h3>
    <h4 style="color:red">@ViewBag.Exception</h4>
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Wypozyczenie</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.IdWypozyczenie, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p style="font-size: 14px; padding-left: 15px; padding-right: 15px; padding-top: 7px;">@ViewBag.IdWypozyczenie</p>
                @Html.EditorFor(model => model.IdWypozyczenie, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.IdWypozyczenie, @style = "display: none" } })
                @Html.ValidationMessageFor(model => model.IdWypozyczenie, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdEgzemplarz, "IdEgzemplarz", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IdEgzemplarz", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdEgzemplarz, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownList("IdCzytelnik", null, htmlAttributes: new { @class = "form-control", @style = "display: none" })
                @Html.ValidationMessageFor(model => model.IdCzytelnik, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.CzyOddane, new { htmlAttributes = new { @style = "display: none" } })
                    @Html.ValidationMessageFor(model => model.CzyOddane, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TerminWypozyczenia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TerminWypozyczenia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TerminWypozyczenia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TerminOddania, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TerminOddania, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TerminOddania, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.Wersja, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">*@
                @Html.EditorFor(model => model.Wersja, new { htmlAttributes = new { @class = "form-control", @style = "display: none" } })
            @*</div>
        </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
